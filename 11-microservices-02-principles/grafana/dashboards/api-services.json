{
  "uid": "api-services",
  "title": "API Services Metrics",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "piechart",
      "title": "Request Distribution by Service",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 9
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum by (app_name) (rate({__name__=~\"http_requests_total|http_request_total|minio_s3_requests_total\"}[1m]))",
          "legendFormat": "{{app_name}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        },
        "pieType": "pie",
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "displayLabels": ["name", "value", "percent"]
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        },
        "overrides": []
      }
    }
  ]
}
